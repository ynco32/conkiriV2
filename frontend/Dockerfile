# Node.js 20.18 버전을 기반으로 하는 이미지 사용
# Node 공식 이미지 (Corepack 내장)
FROM node:20.18-alpine AS build

WORKDIR /app

# 1) Corepack 활성화 & Yarn 4.7.0 준비
RUN corepack enable \
 && corepack prepare yarn@4.7.0 --activate

# 2) 매니페스트 + 설정 복사
COPY package.json yarn.lock .yarnrc.yml ./

# 3) Yarn 설정 및 의존성 설치
RUN mkdir -p .yarn/releases \
 && wget -O .yarn/releases/yarn-4.7.0.cjs https://repo.yarnpkg.com/4.7.0/packages/yarnpkg-cli/bin/yarn.js \
 && chmod +x .yarn/releases/yarn-4.7.0.cjs \
 && yarn install --immutable

# 소스 코드 복사
COPY . .

# 빌드 시 환경변수를 받아옵니다
ARG NEXT_PUBLIC_KAKAO_MAP_API_KEY
ARG NEXT_PUBLIC_API_URL
ARG NEXT_PUBLIC_SKT_API_KEY
ARG NEXT_PUBLIC_SKT_API_URL
ARG NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET
ARG NEXT_PUBLIC_FIREBASE_API_KEY
ARG NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID
ARG NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN
ARG NEXT_PUBLIC_FIREBASE_PROJECT_ID
ARG NEXT_PUBLIC_FIREBASE_VAPID_KEY
ARG NEXT_PUBLIC_FIREBASE_APP_ID

# 환경변수 설정
ENV NEXT_PUBLIC_KAKAO_MAP_API_KEY=$NEXT_PUBLIC_KAKAO_MAP_API_KEY
ENV NEXT_PUBLIC_API_URL=$NEXT_PUBLIC_API_URL
ENV NEXT_PUBLIC_SKT_API_KEY=$NEXT_PUBLIC_SKT_API_KEY
ENV NEXT_PUBLIC_SKT_API_URL=$NEXT_PUBLIC_SKT_API_URL
ENV NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=$NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET
ENV NEXT_PUBLIC_FIREBASE_API_KEY=$NEXT_PUBLIC_FIREBASE_API_KEY
ENV NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=$NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID
ENV NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=$NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN
ENV NEXT_PUBLIC_FIREBASE_PROJECT_ID=$NEXT_PUBLIC_FIREBASE_PROJECT_ID
ENV NEXT_PUBLIC_FIREBASE_VAPID_KEY=$NEXT_PUBLIC_FIREBASE_VAPID_KEY
ENV NEXT_PUBLIC_FIREBASE_APP_ID=$NEXT_PUBLIC_FIREBASE_APP_ID

# 빌드
RUN yarn build

# 포트 설정
EXPOSE 3000

# 애플리케이션 실행
CMD ["yarn", "start"]
